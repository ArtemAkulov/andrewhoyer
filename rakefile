def jekyll(opts = "")
  sh "rm -rf _site"
  sh "jekyll " + opts
end

def compass(opts = "compile")
  sh "compass " + opts
end

desc "Build site using Jekyll"
task :build do
  compass
  jekyll
end

desc "Serve on Localhost with port 4000"
task :default do
  compass("watch &")
  jekyll("--server --auto &> /dev/null")
end

desc "Deploy to Dev"
task :deploy => :"deploy:dev"

namespace :deploy do
  desc "Deploy to Dev"
  task :dev => :build do
    rsync "public_html/dev.andrew-hoyer.com"
  end
  
  desc "Deploy to Live"
  task :live => :build do
    rsync "public_html/andrewhoyer"
  end
  
  desc "Deploy to Dev and Live"
  task :all => [:dev, :live]
  
  def rsync(domain)
    sh "rsync -rtz --delete _site/ asquared@andrew-hoyer.com:~/#{domain}/"
  end
end

desc "Save my site"
task :save do
  sh "rsync -rtz --delete . asquared@andrew-hoyer.com:~/jekyll/andrewhoyer/"
end
